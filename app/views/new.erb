<h1>Add a song<h1>

<% if @song.errors.any? %>
  <div>
    <strong>Some issues with your song form, please fix them:</strong>
    <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<form method="post" action="/songs"
  <div>
    <label>Name:</label>
    <input type="text" name="name" value="<%= @song.name %>">
  </div>
  <div>
    <label>Artist:</label>
    <input type="text" name="artist" value="<%= @song.artist %>">
  </div>
  <div>
    <label>Likes:</label>
    <input type="text" name="likes" value="<%= @song.likes %>">
  </div>
  <div>
    <input type="submit" value="Submit" >
  </div>
</form>